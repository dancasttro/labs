.btn {
    border: none;
    font-family: inherit;
    font-size: 13px;
    color: inherit;
    background: red;
    cursor: pointer;
    padding: 0.8em 1em;
    display: inline-block;
    font-weight: 700;
    outline: none;
    position: relative;
    -webkit-transition: all 0.3s;
    -moz-transition: all 0.3s;
    transition: all 0.3s;
    text-align: center;
	-webkit-appearance: none;
	-webkit-border-radius: 0;
}

.btn:active {
    box-shadow: 0 0 #ab3c3c;
    top: 4px;
}

.btn:focus {
    outline: none;
}

.btn-primary {
    color: #222222;
    background: #FFC807;
    box-shadow: 0 4px #E6B00F;
    -webkit-transition: none;
    -moz-transition: none;
    transition: none;
    -webkit-appearance: none;
	-webkit-border-radius: 0;
}

.btn-primary:active {
    box-shadow: 0 0 #E6B00F;
    top: 4px;
}

/* secondary */
.btn-secondary{
    color: #FFFFFF!important;
    background: #575758;
    box-shadow: 0 4px #222222;
    -webkit-transition: none;
    -moz-transition: none;
    transition: none;
    -webkit-appearance: none;
	-webkit-border-radius: 0;
}

.btn-secondary:active{
    box-shadow: 0 0 #E6B00F;
    top: 4px;
}

/* disabled */
.btn-disabled{
    color: #B9B8B8;
    background: #DDDDDD;
    box-shadow: 0 4px #B9B8B8;
    -webkit-transition: none;
    -moz-transition: none;
    transition: none;
    -webkit-appearance: none;
	-webkit-border-radius: 0;
}

.btn-small {
    width: 120px;
}

.btn-medium {
    width: 180px;
}

.btn-large {
    width: 250px;
}
.margin-left-small {
    margin-left: 15px;
}
.margin-bottom-small {
    margin-bottom: 15px;
}

